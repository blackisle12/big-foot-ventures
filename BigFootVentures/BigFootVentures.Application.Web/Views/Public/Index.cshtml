@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/jquery-te-1.4.0.css" rel="stylesheet" />
        <link href="~/Content/font-awesome.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/Views/Public/Index.css" rel="stylesheet" />
        <title></title>
    </head>
    <body>
        @using (Html.BeginForm("Login", "Public", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 login-div">
                        <div style="margin-left:auto; margin-right:auto">
                            <img class="img-responsive" src="~/Content/images/bf_logo_black.png" />
                        </div>
                        <div class="form-group">
                            <label>Username:</label>
                            @Html.TextBox("username", TempData["username"], new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.Password("password", "", new { @class = "form-control", @required = "required" })
                        </div>
                        @if (TempData.ContainsKey("errorMessage"))
                        {
                            <p class="error-message">@TempData["errorMessage"]</p>
                        }
                        <div class="form-group mar-bottom-10">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </body>
</html>
