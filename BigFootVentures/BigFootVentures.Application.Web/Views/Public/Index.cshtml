@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/jquery-te-1.4.0.css" rel="stylesheet" />
        <link href="~/Content/font-awesome.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/Views/Public/Index.css" rel="stylesheet" />
        <title></title>
    </head>
    <body>
        @using (Html.BeginForm("Login", "Public", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            if (TempData.ContainsKey("errorMessage"))
            {
                <div class="alert alert-danger">
                    <p>@TempData["errorMessage"]</p>
                </div>
            }

            <div class="container">
                <div class="row">
                    <div class="col-sm-12 login-div">
                        <div class="login-title">
                            <p>Bigfoot Ventures</p>
                        </div>
                        <div class="form-group">
                            <label>Username:</label>
                            @Html.TextBox("username", TempData["username"], new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.Password("password", "", new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group mar-bottom-10">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </body>
</html>
