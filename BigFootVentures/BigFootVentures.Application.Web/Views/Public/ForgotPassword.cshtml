@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Management

@{
    Layout = null;
}

@model VMModel<UserAccount>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recover your account</title>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Views/Shared/_Layout.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("ForgotPassword", "Public", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="col-sm-8 col-sm-offset-2" style="margin-top: 50px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        Recover your account
                    </span>
                    <span class="panel-title pull-right">
                        <i class="fa fa-user-circle"></i>
                    </span>
                </div>
                <div class="panel-body">
                    <p>Hi, please provide your e-mail address so we can send a recovery link..</p>
                    <hr />

                    <div class="form-group">
                        <label class="col-sm-3 control-label">E-mail Address</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Record.EmailAddress, new { @class = "form-control required", @required = "required" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="submit"><i class="fa fa-edit"></i> Submit</button>
                </div>
            </div>
        </div>
    }
</body>
</html>


