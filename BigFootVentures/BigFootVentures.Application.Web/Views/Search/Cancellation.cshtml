<link href="~/Content/Views/Search/Index.css" rel="stylesheet" />
<link href="~/Content/Views/Search/Cancellation.css" rel="stylesheet" />

@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Management

@{
    ViewBag.Title = "Search Result (Cancellation) - " + ViewBag.Keyword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMSearchResultObject<Cancellation>

@using (Html.BeginForm("Cancellation", "Search", FormMethod.Get))
{
    <h4>
        Search result for keyword "<strong>@ViewBag.Keyword</strong>" on <strong>@Model.Caption</strong> (@Model.ObjectResult.Total found)
    </h4>

    <hr />

    <div class="col-md-2">
        @Html.Partial("../Shared/_Components/Search/_PageObjectsFilter")
    </div>
    <div class="col-md-10">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr class="th-bg">
                        <th></th>
                        <th class="th-name">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cancellation in Model.ObjectResult.Records)
                        {
                            <tr>
                                <td><a href="@Url.RouteUrl("CancellationView", new { ID = cancellation.ID })" target="_blank">View</a></td>
                                <td>@cancellation.ReferenceInternal</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @Html.Partial("../Shared/_Components/Search/_PageFooter")
    </div>
}
