@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Utilities

@{
    ViewBag.Title = "Company - New Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CompanyNewSelectRecordType", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">
                Select Company Record Type
            </span>
            <span class="panel-title pull-right">
                <i class="fa fa-edit"></i>
            </span>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">Record Type</label>
                <div class="col-sm-5">
                    @Html.DropDownList("RecordType", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Company.AccountRecordType>()), new { @class = "form-control" })
                </div>
                <div class="col-sm-5">
                    <div class="table-responsive">                        
                        <table class="table table-striped table-bordered">
                            <caption>Available Company Record Types</caption>
                            <thead>
                                <tr>
                                    <th>Record Type</th>
                                    <th>Description <span class="pull-right"><i class="fa fa-info"></i></span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Business Account</strong></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><strong>External Client</strong></td>
                                    <td>For External Clients</td>
                                </tr>
                                <tr>
                                    <td><strong>Person Account</strong></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>                   
                </div>
            </div>           
        </div>
        <div class="panel-footer">
            <button type="submit"><i class="fa fa-arrow-circle-o-right"></i> Continue</button>
        </div>
    </div>
}

