<link href="~/Content/Views/Home/LegalCase.css" rel="stylesheet" />

@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Management

@{
    ViewBag.Title = "Legal Case - " + Model.Record.LegalProceedingName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMModel<LegalCase>

@using (Html.BeginForm("FileAttachmentUpload", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.Partial("../Shared/_Components/Page/_PageEditViewAlert")

    <div class="panel panel-default panel-parent">
        <div class="panel-heading">
            <span class="panel-title">
                You are viewing Legal Case <strong>@Model.Record.TypeOfCase</strong>
            </span>
            <span class="panel-title pull-right">
                <span>Reference ID: <strong>@Model.Record.ID</strong></span>
            </span>
        </div>
        <div class="panel-body">
            <!-- START: Information -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Legal Case Detail</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-view">
                        <tr>
                            <td><strong>Legal Proceeding Name</strong></td>
                            <td>@Model.Record.LegalProceedingName</td>
                            <td><strong>Owner</strong></td>
                            <td>@Model.Record.DisplayName</td>
                        </tr>
                        <tr>
                            <td><strong>Office</strong></td>
                            <td><a href="@Url.RouteUrl("OfficeView", new { ID = Model.Record.Trademark?.Office?.ID })">@(Model.Record.Trademark?.Office?.OfficeName)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Type Of Case</strong></td>
                            <td>@Model.Record.TypeOfCase</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Type of Case External Clients</strong></td>
                            <td>@Model.Record.TypeOfCaseExternalClients</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Trademark</strong></td>
                            <td><a href="@Url.RouteUrl("TrademarkView", new { ID = Model.Record.Trademark?.ID })">@(Model.Record.Trademark?.Name)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Trademark Number</strong></td>
                            <td>@Model.Record.TrademarkNumber</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Keywords</strong></td>
                            <td>@Model.Record.Keywords</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Date Assigned</strong></td>
                            <td>@Model.Record.DateAssigned</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Court Url</strong></td>
                            <td><a href="#" class="open-link" data-link="@Model.Record.CourtURL">@Model.Record.CourtURL</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Plantiff</strong></td>
                            <td><a href="@Url.RouteUrl("CompanyView", new { ID = Model.Record.Plaintiff?.ID })">@(Model.Record.Plaintiff?.DisplayName)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Defendant</strong></td>
                            <td><a href="@Url.RouteUrl("CompanyView", new { ID = Model.Record.Defendant?.ID })">@(Model.Record.Defendant?.DisplayName)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Plantiff Representative</strong></td>
                            <td><a href="@Url.RouteUrl("CompanyView", new { ID = Model.Record.PlaintiffRepresentative?.ID })">@(Model.Record.PlaintiffRepresentative?.DisplayName)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Defendant Representative</strong></td>
                            <td><a href="@Url.RouteUrl("CompanyView", new { ID = Model.Record.DefendantRepresentative?.ID })">@(Model.Record.DefendantRepresentative?.DisplayName)</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Deletion Request</strong></td>
                            <td><input type="checkbox" disabled="disabled" @(Model.Record.DeletionRequest ? "checked" : string.Empty) /></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><strong>Deletion Request Reason</strong></td>
                            <td>@Model.Record.DeletionRequestReason</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- END: Information -->

            @Html.Partial("../Shared/_Components/Page/_PageDetailViewTasks")
            @Html.Partial("../Shared/_Components/Page/_PageDetailViewFileAttachment")
            @Html.Partial("../Shared/_Components/Page/_PageDetailViewAuditTrail")
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageEditViewFooter")
        </div>
    </div>
}