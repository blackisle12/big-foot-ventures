<link href="~/Content/Views/Home/Agreement.css" rel="stylesheet" />

@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Management

@{
    ViewBag.Title = "Agreement - " + Model.Record.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMModel<AgreementT>

<form class="form-horizontal">
    @Html.Partial("../Shared/_Components/Page/_PageEditViewAlert")

    <div class="panel panel-default panel-parent">
        <div class="panel-heading">
            <span class="panel-title">
                You are viewing Agreement <strong>@Model.Record.Name</strong>
            </span>
            <span class="panel-title pull-right">
                <i class="fa fa-eye"></i>
            </span>
        </div>
        <div class="panel-body">
            <!-- START: Information -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Information</h4>
                </div>
                <div class="panel-body">
                    <div class="col-sm-3">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Agreement Name</strong></li>
                            <li class="list-group-item"><strong>Name of the BF Company</strong></li>
                            <li class="list-group-item"><strong>Name of the counterpart</strong></li>
                            <li class="list-group-item"><strong>Object of Agreement</strong></li>
                            <li class="list-group-item"><strong>Trademark</strong></li>
                            <li class="list-group-item"><strong>Other Related Trademarks</strong></li>
                            <li class="list-group-item"><strong>Type of Agreement</strong></li>
                            <li class="list-group-item"><strong>Applicability</strong></li>
                            <li class="list-group-item"><strong>Date of Signature</strong></li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <ul class="list-group">
                            <li class="list-group-item">@Model.Record.Name</li>
                            <li class="list-group-item">@Model.Record.BFCompany.DisplayName</li>
                            <li class="list-group-item">@Model.Record.Counterpart.DisplayName</li>
                            <li class="list-group-item">@Model.Record.ObjectOfAgreement</li>
                            <li class="list-group-item"></li>
                            <li class="list-group-item">@Model.Record.OtherRelatedTrademarks</li>
                            <li class="list-group-item">@Model.Record.Type</li>
                            <li class="list-group-item">@Model.Record.Applicability</li>
                            <li class="list-group-item">@Model.Record.DateOfSignature</li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Owner</strong></li>
                            <li class="list-group-item"><strong>Comments</strong></li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <ul class="list-group">
                            <li class="list-group-item">@Model.Record.OwnerName</li>
                            <li class="list-group-item">@Model.Record.Comments</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- END: Information -->
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageEditViewFooter")
        </div>
    </div>
</form>