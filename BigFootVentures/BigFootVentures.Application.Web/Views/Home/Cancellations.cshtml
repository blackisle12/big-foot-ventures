<link href="~/Content/Views/Home/Cancellations.css" rel="stylesheet" />

@using BigFootVentures.Business.Objects.Management
@using BigFootVentures.Application.Web.Models.ViewModels

@{
    ViewBag.Title = "Cancellation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMPageResult<Cancellation>

@using (Html.BeginForm("Cancellations", "Home", FormMethod.Get))
{
    @Html.Partial("../Shared/_Components/Page/_PageTableViewAlert")

    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewHeader")
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="th-bg">
                        <th></th>
                        <th class="th-reference-internal">Cancellation Reference Internal</th>
                        <th class="th-trademark-name">Trademark</th>
                        <th class="th-receipt-date">Cancellation Receipt Date</th>
                        <th class="th-reference-external">Cancellation Reference External</th>
                        <th class="th-submission-method">Cancellation Submission Method</th>
                        <th class="th-applicant-name">Cancellation Applicant</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cancellation in Model.Records)
                        {
                            <tr>
                                <td><a href="@Url.RouteUrl("CancellationView", new { ID = cancellation.ID })" target="_blank">View</a></td>
                                <td>@cancellation.ReferenceInternal</td>
                                <td>@(cancellation.Trademark?.Name)</td>
                                <td>@cancellation.ReceiptDate</td>
                                <td>@cancellation.ReferenceExternal</td>
                                <td>@cancellation.SubmissionMethod</td>
                                <td>@(cancellation.Applicant?.DisplayName)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewFooter")
        </div>
    </div>

    <script src="~/Scripts/Views/Home/Cancellations.js"></script>
}
