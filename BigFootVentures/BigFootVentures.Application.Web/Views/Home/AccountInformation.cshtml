<link href="~/Content/Views/Home/AccountInformation.css" rel="stylesheet" />

@using BigFootVentures.Application.Web.Models
@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Management
@using BigFootVentures.Business.Objects.Utilities

@{
    ViewBag.Title = $"Account Information - {Model.Record.FirstName} {Model.Record.LastName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMModel<UserAccount>

@using (Html.BeginForm("AccountInformation", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default panel-parent">
        <div class="panel-heading">
            <span class="panel-title">
                Account Information
            </span>
            <span class="panel-title pull-right">
                <i class="fa fa-@(Model.PageMode == VMEnums.PageMode.View || Model.PageMode == VMEnums.PageMode.PersistSuccess ? "eye" : "edit" )"></i>
            </span>
        </div>
        <div class="panel-body">
            <!-- START: General Information -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        General Information
                        <span class="pull-right panel-control"><i class="fa fa-window-minimize"></i></span>
                    </h4>
                </div>
                <div class="panel-body">
                    <fieldset @(Model.PageMode == VMEnums.PageMode.View || Model.PageMode == VMEnums.PageMode.PersistSuccess ? "disabled" : string.Empty)>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">First Name</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.FirstName, new { @class = "form-control" })
                            </div>

                            <label class="col-sm-2 control-label text-neutral">Title</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Record.LastName, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-sm-2 control-label text-neutral">Company</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.Company, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email Address</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.EmailAddress, new { @class = "form-control" })
                            </div>

                            <label class="col-sm-2 control-label text-neutral">Department</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.Department, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-offset-6 control-label">Division</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.Division, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-offset-6 control-label">Employee Number</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.EmployeeNumber, new { @class = "form-control" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- END: General Information -->
            <!--START: Mailing Address-->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Mailing Address
                        <span class="pull-right panel-control"><i class="fa fa-window-minimize"></i></span>
                    </h4>
                </div>
                <div class="panel-body">
                    <fieldset @(Model.PageMode == VMEnums.PageMode.View || Model.PageMode == VMEnums.PageMode.PersistSuccess ? "disabled" : string.Empty)>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Country</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m => m.Record.MailingCountry, new SelectList(EnumUtils.GetDescriptions<ManagementEnums.LoginInformation.Country>()), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Street</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.MailingStreet, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">City</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.MailingCity, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">State/Province</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.MailingState, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Zip Code</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.MailingZipCode, new { @class = "form-control" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- END:  Mailing Address -->
        </div>        
    </div>
}