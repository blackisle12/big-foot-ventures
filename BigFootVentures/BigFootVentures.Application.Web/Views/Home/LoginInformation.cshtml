@using BigFootVentures.Application.Web.Models
@using BigFootVentures.Application.Web.Models.Utilities
@using BigFootVentures.Application.Web.Models.ViewModels
@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Management
@using BigFootVentures.Business.Objects.Utilities

@{
    ViewBag.Title = "Login Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMModel<LoginInformation>

@using (Html.BeginForm("LoginInformation", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Record.ID)

    @Html.Partial("../Shared/_Components/Page/_PageEditViewAlert")

    <div class="panel panel-default panel-parent">
        <div class="panel-heading">
            <span class="panel-title">
                You are @(Model.Record.ID > 0 ? "editing" : "creating new") Login Information <strong>@Model.Record.AccountName</strong>
            </span>
            <span class="panel-title pull-right">
                <i class="fa fa-edit"></i>
            </span>
        </div>
        <div class="panel-body">
            <!-- START: Information -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Information</h4>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Country</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(m => m.Record.Country, new SelectList(EnumUtils.GetDescriptions<ManagementEnums.LoginInformation.Country>()), new { @class = "form-control" })
                            </div>

                            <label class="col-sm-2 control-label text-neutral">Owner</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Record.OwnerName, new { @class = "form-control input-neutral", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Office</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.Office, new { @class = "form-control" })
                            </div>
                        </div>                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">URL</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.Url, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.LoginInformationID, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">PW</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.PW, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Account Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.AccountName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Current Account</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.CurrentAccount, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Secret Phase</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.SecretPhase, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Monitoring Staff</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.MonitoringStaff, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Office ID</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.OfficeID, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Company Registration No</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.CompanyRegistrationNo, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Balance</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.Balance, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email Address</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Record.EmailAddress, new { @class = "form-control" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- END: Information -->
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageEditViewFooter")
        </div>
    </div>

    <script src="~/Scripts/Views/Shared/_Validator.js"></script>
    <script src="~/Scripts/Views/Shared/_PanelHelper.js"></script>
}
