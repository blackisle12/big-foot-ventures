<link href="~/Content/Views/Home/PreFilingSimilarityResearchs.css" rel="stylesheet" />

@using BigFootVentures.Business.Objects.Management
@using BigFootVentures.Application.Web.Models.ViewModels

@{
    ViewBag.Title = "Pre-Filing Similarity Research";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMPageResult<PreFilingSimilarityResearch>

@using (Html.BeginForm("PreFilingSimilarityResearchs", "Home", FormMethod.Get))
{
    @Html.Partial("../Shared/_Components/Page/_PageTableViewAlert")

    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewHeader")
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="th-bg">
                        <th class="th-researched-brand-name">Researched Brand</th>
                        <th class="th-office-name">Office</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var preFilingSimilarityResearch in Model.Records)
                        {
                            <tr>
                                <td><a href="@Url.RouteUrl("PreFilingSimilarityResearchView", new { ID = preFilingSimilarityResearch.ID })" target="_blank">@preFilingSimilarityResearch.ResearchedBrand.Name</a></td>
                                <td>@preFilingSimilarityResearch.Office.OfficeName</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewFooter")
        </div>
    </div>

    <script src="~/Scripts/Views/Home/PreFilingSimilarityResearchs.js"></script>
}