<link href="~/Content/Views/Home/Brands.css" rel="stylesheet" />

@using BigFootVentures.Business.Objects.Management
@using BigFootVentures.Application.Web.Models.ViewModels

@{
    ViewBag.Title = "Brands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMPageResult<Brand>

@using (Html.BeginForm("Brands", "Home", FormMethod.Get))
{
    @Html.Partial("../Shared/_Components/Page/_PageTableViewAlert")

    <h4>Brands</h4>
    <hr />
    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewHeader")
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover" name="Table.Brands">
                <thead>
                    <tr class="th-bg">
                        <th class="th-name">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "NAME", sortOrder = (Model.SortBy == "NAME" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                Name @if (Model.SortBy == "NAME")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                        <th class="th-pupose">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "PURPOSE", sortOrder = (Model.SortBy == "PURPOSE" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                Purpose @if (Model.SortBy == "PURPOSE")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                        <th class="th-vaue">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "VALUE", sortOrder = (Model.SortBy == "VALUE" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                Value @if (Model.SortBy == "VALUE")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                        <th class="th-categories">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "CATEGORY", sortOrder = (Model.SortBy == "CATEGORY" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                Categories @if (Model.SortBy == "CATEGORY")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                        <th class="th-hvt">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "HVT", sortOrder = (Model.SortBy == "HVT" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                HVT (High Value Target) @if (Model.SortBy == "HVT")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                        <th class="th-emv">
                            <a href="@Url.RouteUrl("Brands", new { rowCount = Model.RowCount, page = Model.Page, sortBy = "EMV", sortOrder = (Model.SortBy == "EMV" ? (Model.SortOrder == "asc" ? "desc" : "asc") : "asc"), keyword = ViewBag.Keyword })">
                                EMV @if (Model.SortBy == "EMV")
                                {<i class="fa fa-sort-alpha-@Model.SortOrder"></i>}
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var brand in Model.Records)
                        {
                            <tr>
                                <td><a href="@Url.RouteUrl("BrandView", new { ID = brand.ID })" target="_blank">@brand.Name</a></td>
                                <td>@brand.Purpose</td>
                                <td>@brand.Value</td>
                                <td>@brand.Category</td>
                                <td><input type="checkbox" @(brand.HVTChk ? "checked" : string.Empty) disabled /></td>
                                <td>@brand.EMV</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            @Html.Partial("../Shared/_Components/Page/_PageTableViewFooter")
        </div>
    </div>

    <script src="~/Scripts/Views/Home/Brands.js"></script>
}