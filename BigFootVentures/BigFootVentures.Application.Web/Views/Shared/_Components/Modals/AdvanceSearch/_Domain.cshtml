@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Utilities

<div name="Div.DomainFilter" class="div-filter" style="display: none;">
    <div class="form-group">
        <label class="col-sm-2 control-label">Domain Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Select.Filter.Domain.Name" />
        </div>

        <label class="col-sm-2 control-label">BigFoot Owned</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Domain.BigFootOwned">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Website Current</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Domain.WebsiteCurrent">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>

        <label class="col-sm-2 control-label">Locked</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Domain.Locked">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Website Use</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Domain.WebsiteUse", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Domain.WebsiteUse>()), new { @class = "form-control" })
        </div>

        <label class="col-sm-2 control-label">BF Strategy</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Domain.BFStrategy", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Domain.BFStrategy>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Buyside Funnel</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Domain.BuysideFunnel", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Domain.BuysideFunnel>()), new { @class = "form-control" })
        </div>

        <label class="col-sm-2 control-label">FMV Order of Magnitude</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Domain.FMVOrderOfMagnitude", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Domain.FMVOrderOfMagnitude>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Company Website</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Domain.CompanyWebsite">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>

        <label class="col-sm-2 control-label">Status</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Domain.Status", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Domain.Status>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Auto Renew</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Domain.AutoRenew">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>

        <label class="col-sm-2 control-label">Version</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Select.Filter.Domain.Version" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">WHOIS</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Select.Filter.Domain.WHOIS" />
        </div>

        <label class="col-sm-2 control-label">Category</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Select.Filter.Domain.Category" />
        </div>
    </div>
</div>