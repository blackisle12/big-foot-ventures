@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Utilities

<div name="Div.LeadFilter" class="div-filter" style="display: none;">
    <div class="form-group">
        <label class="col-sm-2 control-label">Status</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Lead.Status", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Lead.StatusFilter>()), new { @class = "form-control" })
        </div>

        <label class="col-sm-2 control-label">Company</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.Company" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.FirstName" />
        </div>

        <label class="col-sm-2 control-label">Middle Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.MiddleName" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.LastName" />
        </div>

        <label class="col-sm-2 control-label">Industry</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Lead.Industry", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Lead.Industry>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.Email" />
        </div>

        <label class="col-sm-2 control-label">Lead Source</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Lead.Source", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Lead.Source>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Lead.Phone" />
        </div>
    </div>
</div>