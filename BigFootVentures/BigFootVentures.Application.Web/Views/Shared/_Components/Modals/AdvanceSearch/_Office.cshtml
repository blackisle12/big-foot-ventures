@using BigFootVentures.Business.Objects.Enumerators
@using BigFootVentures.Business.Objects.Utilities

<div name="Div.OfficeFilter" class="div-filter" style="display: none;">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.OfficeName" />
        </div>

        <label class="col-sm-2 control-label">Geography Type</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Office.GeographyType", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Office.GeographyType>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">State</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.State" />
        </div>

        <label class="col-sm-2 control-label">Office</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.Office" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Office URL</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.OfficeURL" />
        </div>

        <label class="col-sm-2 control-label">Office Value Category</label>
        <div class="col-sm-4">
            @Html.DropDownList("Select.Filter.Office.OfficeValueCategory", new SelectList(EnumUtils.GetDescriptions<ManagementEnums.Office.OfficeValueCategory>()), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Online</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Office.Online">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>

        <label class="col-sm-2 control-label">Search URL</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.SearchURL" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Office Name Archive</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Input.Filter.Office.OfficeNameArchive" />
        </div>

        <label class="col-sm-2 control-label">National Number Assigned</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Office.NationalNumberAssigned">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">PCT</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Office.PCT">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>

        <label class="col-sm-2 control-label">Paris</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Office.Paris">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">WTO</label>
        <div class="col-sm-4">
            <select class="form-control" name="Select.Filter.Office.WTO">
                <option value="NotSet"></option>
                <option value="1">Checked</option>
                <option value="0">Unchecked</option>
            </select>
        </div>
    </div>
</div>